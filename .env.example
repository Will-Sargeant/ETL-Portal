# ============================================================================
# Application Database Configuration (ETL Portal metadata storage)
# ============================================================================
# DO NOT CHANGE - These are configured in docker-compose.yml
POSTGRES_USER=etl_user
POSTGRES_PASSWORD=etl_password
POSTGRES_DB=etl_portal

# ============================================================================
# Test Database Configuration (Sample ETL job destination)
# ============================================================================
# DO NOT CHANGE - Pre-configured test database for trying out ETL jobs
TEST_DB_HOST=test-db
TEST_DB_PORT=5432
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=test_db

# ============================================================================
# Backend Configuration
# ============================================================================
# DO NOT CHANGE - Automatically configured for Docker environment
DATABASE_URL=postgresql+asyncpg://etl_user:etl_password@postgres:5432/etl_portal
REDIS_URL=redis://redis:6379/1

# ============================================================================
# Security Keys - REQUIRED: Generate after running docker-compose up
# ============================================================================
# Step 1: Generate ENCRYPTION_KEY (for encrypting database credentials)
# Run: docker-compose exec backend python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Then paste the output here:
ENCRYPTION_KEY=

# Step 3: Generate SECRET_KEY (for JWT token signing)
# Run: openssl rand -hex 32
# Then paste the output here:
SECRET_KEY=

# Step 2: Generate AIRFLOW_FERNET_KEY (for Airflow internal encryption)
# Run: docker-compose exec backend python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Then paste the output here:
AIRFLOW_FERNET_KEY=


# ============================================================================
# Airflow Admin User (for Airflow UI at http://localhost:8080)
# ============================================================================
# OPTIONAL: Change these if you want different Airflow admin credentials
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# ============================================================================
# File Upload Settings
# ============================================================================
# DO NOT CHANGE unless you need different limits
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=1000000000  # 1GB max file size
TEMP_FILE_CLEANUP_HOURS=24  # Clean up temp files after 24 hours

# ============================================================================
# ETL Processing Settings
# ============================================================================
# OPTIONAL: Adjust these for performance tuning
DEFAULT_BATCH_SIZE=10000    # Number of rows processed per batch
MAX_PREVIEW_ROWS=100        # Number of rows shown in data preview

# ============================================================================
# CORS Origins (for frontend access)
# ============================================================================
# DO NOT CHANGE for local development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Airflow Internal Configuration
# ============================================================================
# DO NOT CHANGE - Configured for Docker environment
AIRFLOW_DAGS_DIR=./airflow/dags
AIRFLOW_API_URL=http://airflow-webserver:8080/api/v1

# ============================================================================
# Environment Settings
# ============================================================================
# DO NOT CHANGE for local development
ENVIRONMENT=development
DEBUG=True

# ============================================================================
# Frontend Configuration
# ============================================================================
# DO NOT CHANGE for local development
VITE_API_URL=http://localhost:8000

# ============================================================================
# Google OAuth Configuration (OPTIONAL - for Google Sheets integration)
# ============================================================================
# OPTIONAL: Only required if you want to use Google Sheets as a data source
# Follow the Google Sheets Integration Setup section in README.md
# Then replace the values below with your actual credentials:
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback